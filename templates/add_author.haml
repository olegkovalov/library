{% extends "base.haml" %}
{% block title %}{{ 'Add author' }}{% endblock %}
{% from '_formhelpers.haml' import render_field %}

{% block body %}
.row
    .col-xs-6
        %form role="form" action="{{ url_for('add_author') }}" method="post"
            {{ render_field(form.name, 'user', 'author') }}
            {{ render_field(form.title, 'book', 'book1, book2, book3...') }}
            {{ form.hidden_tag() }}
            %button.btn.btn-success type="submit" value="submit"
                %span.glyphicon.glyphicon-edit
                {{ 'Add' }}
{% endblock %}