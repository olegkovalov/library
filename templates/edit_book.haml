{% extends "base.haml" %}
{% block title %}{{ 'Edit book' }}{% endblock %}
{% from '_formhelpers.haml' import render_field %}

{% block body %}
.row
    .col-xs-6
        %form role="form" action="{{ url_for('edit_book', title=title) }}" method="post"
            {{ render_field(form.title, 'book', 'book') }}
            {{ render_field(form.name, 'user', 'author1, author2, author3...') }}
            {{ form.hidden_tag() }}
            %button.btn.btn-success type="submit" value="submit"
                %span.glyphicon.glyphicon-edit
                {{ 'Edit' }}
{% endblock %}